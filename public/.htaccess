# Bật công cụ Rewrite
RewriteEngine On

# Nếu request không phải là một file có thật (như style.css, script.js)
RewriteCond %{REQUEST_FILENAME} !-f
# Nếu request không phải là một thư mục có thật
RewriteCond %{REQUEST_FILENAME} !-d

# Chuyển hướng tất cả các request khác về index.php
# và truyền URL gốc vào biến 'url'
RewriteRule ^(.*)$ index.php?url=$1 [L,QSA]